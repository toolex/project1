<h2>Transactions</h2>

<li class="menu-item"><a href='/transactions/new'>New Transaction</a></li>

<div id="list-transactions">
  <% @transactions.each do |transaction| %>

  <div class="transaction">
    <hr>
    <h3><a href="/transactions/<%= transaction.id %>"></a></h3>
    <p>Merchant: <%= transaction.merchant.name %></p>
    <p>Tag: <%= transaction.tag.type %></p>
    <p>Amount: <%= transaction.amount %></p>

    <li class="details">
        <a href="/transactions/<%= transaction.id %>">More Details</a>
      </li>
  </div>
  <% end %>

</div>
